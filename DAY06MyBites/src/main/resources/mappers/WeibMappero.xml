<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tedu.day05mybatis.mapper.WeiboMapper">

    <insert id="insert">
        INSERT INTO blog(content,created,user_id)
        VALUES(#{content},#{created},#{userId})
    </insert>

    <delete id="deleteById">
        DELETE FROM weibo
        WHERE id=#{id}
    </delete>

    <update id="update">
        UPDATE weibo SET content=#{content},created=#{created},user_id=#{userId}
    </update>

    <select id="findById" resultType="com.tedu.day05mybatis.pojo.Weibo">
        SELECT content,created
        FROM weibo
        WHERE id IN(
            <foreach collection="list" item="ids" separator=",">-- 循环遍历
                #{ids}
            </foreach>
            )
    </select>

    <select id="findById" resultType="com.tedu.day05mybatis.pojo.Weibo">
        SELECT content,created
        FROM weibo
    </select>

    <select id="selectContent" resultType="com.tedu.day05mybatis.pojo.WeiboVO1">
        SELECT content,created
        FROM weibo
        WHERE id=#{id}
    </select>

    <update id="dynamicUpdate">-- 动态sql
        <set>
            <if test="content!=null">content=#{content},</if>
            <if test="created!=null">created=#{created},</if>
            <if test="userId!=null">user_id=#{userId}</if>
        </set>
    </update>

</mapper>
